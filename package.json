{
  "name": "react-spy",
  "version": "0.8.0",
  "description": "A set of utilities for collecting UX-analytics of your React-application (ex: clicks, shows, errors and etc.)",
  "author": "RubaXa <ibnRubaXa@gmail.com",
  "license": "MIT",
  "main": "index.js",
  "repository": "git@github.com:rubaxa/react-spy.git",
  "scripts": {
    "test": "jest --coverage",
    "ts-build": "tsc",
    "git-clean": "git clean -f",
    "prepublish": "npm run test && npm run ts-build",
    "postpublish": "npm run git-clean"
  },
  "files": [
    "*.js",
    "*.d.ts",
    "src/*/*.js",
    "src/*/*.d.ts"
  ],
  "devDependencies": {
    "@types/enzyme": "^2.8.12",
    "@types/jest": "^19.2.3",
    "@types/prop-types": "^15.0.0",
    "enzyme": "^3.1.0",
    "enzyme-adapter-react-16": "^1.0.1",
    "jest": "^20.0.3",
    "raf": "^3.4.0",
    "react-test-renderer": "^16.0.0",
    "ts-jest": "^20.0.4",
    "typescript": "^2.4.0",
    "prop-types": "^15.6.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "\\.tests\\.tsx?$",
    "transformIgnorePatterns": [],
    "setupFiles": [
      "raf/polyfill"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/__jest__/extensions.ts",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  },
  "peerDependencies": {
    "@types/react": ">=15.0.0",
    "@types/react-dom": ">=15.0.0"
  }
}
